<!DOCTYPE html>
<html>
    <head>
        <title>Resume</title>
        <meta name="viewport" content="width=device-width, initial-scale=1">
        <!--Font Awesome-->
        <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css">
        <!-- jQuery CDN -->
        <script src="https://code.jquery.com/jquery-3.2.1.min.js"></script>
        <!--SemanticUI-->
        <link rel="stylesheet" type="text/css" href="https://cdnjs.cloudflare.com/ajax/libs/semantic-ui/2.3.0/semantic.css">
        <!--<link rel="stylesheet" type="text/css" href="semantic/dist/semantic.min.css">-->
        <!--<script src="https://code.jquery.com/jquery-3.1.1.min.js"></script>-->
        <!--<script src="semantic/dist/semantic.min.js"></script>-->
        <!--Custom JS-->
        <script src="/js/app.js"></script>
        <!--Custom CSS-->
        <link rel="stylesheet" type="text/css" href="/stylesheets/index.css">
    </head>
    <body>
        <!--Header-->
        <header>
        </header>
        
        <!--Main-->
        <main style="color: <%= resume.fontColor %>">
            <!--Landing Page Section-->
            <section class="landing-page section-background" style="background-image: url(<%= resume.backgroundImg %>); color: <%= resume.fontColor %>;">
                <div class="box introduction"><h3><%= resume.introduction %></h3></div>
                <div class="box elevator-pitch"><h3><%- resume.elevatorPitch %></h3></div>
    		    <% if(coverLetter) { %>
                    <!-- Modal -->
                    <div id="cover-letter" class="cover-letter">
                        <div class="cover-letter-title">
                            <%= coverLetter.title %>
                        </div>
                        <hr>
                        <div class="cover-letter-body">
                            <%= coverLetter.body %>
                        </div>
                        <br><br>
                        <button class="ui mini primary button" onclick="closeCoverLetter()">
                            Continue
                        </button>
                    </div>
    		    <% } %>
		    
		    </section>
		    <!--Timeline Section-->
		    <% if(resume.timeline.details.length > 0) { %>
    		    <section class="section-background" style="background-image: url(<%= resume.timeline.backgroundImg %>); color: <%= resume.timeline.fontColor %>;">
    		        <div class="timeline-section">
        		        <div class="title">
        		            <h2>-- Notable Timeline Events --</h2>
        		        </div>
        		        <div class="events-all">
        		            <% resume.timeline.details.forEach(function(event, idx){ %>
                                <div class="ui link cards event" style="order: <%= event.date.getTime() / 100000 %>;">
                                    <div class="card">
                                        <div class="image">
                                            <img src="<%= event.icon %>">
                                        </div>
                                        <div class="content">
                                            <div class="header"><%= moment(event.date).format('MMMM YYYY') %></div>
                                            <div class="meta">
                                                <a><%- event.summary %></a>
                                            </div>
                                            <div class="description">
                                                <%- event.detail %>
                                            </div>
                                        </div>
                                        <div class="extra content">
                                            <span class="floated">
                                                <%= moment(event.date).fromNow() %>
                                            </span>
                                        </div>
                                    </div>
                                </div>
        		            <% }) %>
        		        </div>
    		        </div>
    		    </section>
		    <% } %>
		    
		    <!--Skills Section-->
		    <% if(resume.skills.details.length > 0) { %>
    		    <section class="section-background" style="background-image: url(<%= resume.skills.backgroundImg %>); color: <%= resume.skills.fontColor %>;">
    		        <div class="skills-section">
        		        <div class="title">
        		            <h2>-- Notable Skills --</h2>
        		        </div>
                        <div class="ui inverted segment">
                            <div class="ui inverted relaxed divided list">
        	                    <% resume.skills.details.forEach(function(skillCat){ %>
                                    <div class="item">
                                        <div class="content">
                                            <div class="skill-header">
                                                <img src="<%= skillCat.categoryIcon %>">
                                                <%= skillCat.category %>
                                                <img src="<%= skillCat.categoryIcon %>">
                                            </div>
                                            <div class"all-skills">
                            		            <% skillCat.skill.forEach(function(skill){ %>
                                                    <div style="font-size:<%= skill.proficiency <= 2 ? 1 : skill.proficiency / 2 %>em" >
                                                        <p><%- skill.skillName %></p>
                                                    </div>
                                                <% }) %>
                                            </div>
                                        </div>
                                    </div>
        	                    <% }) %>
                            </div>
                        </div>
                    </div>
    		    </section>
    		<% } %>
		    
		    <!--Interests Section-->
		    <% if(resume.interests.details.length > 0) { %>
    		    <section class="section-background" style="background-image: url(<%= resume.interests.backgroundImg %>); color: <%= resume.interests.fontColor %>;">
    		        <div class="interests-section">
        		        <div class="title">
        		            <h2>-- Interests --</h2>
        		        </div>
                        <div class="ui inverted segment">
                            <div class="ui inverted relaxed divided list">
        	                    <% resume.interests.details.forEach(function(interestCat){ %>
                                    <div class="item">
                                        <div class="content">
                                            <div class="skill-header">
                                                <img src="<%= interestCat.categoryIcon %>">
                                                <%= interestCat.category %>
                                                <img src="<%= interestCat.categoryIcon %>">
                                            </div>
                                            <div class"all-skills">
                            		            <% interestCat.interest.forEach(function(interest){ %>
                                                    <div>
                                                        <p><%- interest.interest %></p>
                                                    </div>
                                                <% }) %>
                                            </div>
                                        </div>
                                    </div>
        	                    <% }) %>
                            </div>
                        </div>
    		        </div>
    		    </section>
    		<% } %>
		    
		    <!--Work Experience Section-->
		    <% if(resume.experience.details.length > 0) { %>
    		    <section class="section-background" style="background-image: url(<%= resume.experience.backgroundImg %>); color: <%= resume.experience.fontColor %>;">
    		        <div class="work-experience-section">
        		        <div class="title">
        		            <h2>-- Work Experience --</h2>
        		        </div>
        		        
        		        <div class="experience-all">
        	                <!--Loop through work experience-->
        	                <% resume.experience.details.forEach(function(workExp){ %>
        	                                            <!--Sort by Start Date, Desc-->
        	                    <div class="experience" style="order: <%= - workExp.startDate.getTime() / 100000 %>;">
                                    <div class="experience-image">
                                        <a class="" href="<%= workExp.url %>" target="_blank">
                                            <img src="<%= workExp.logo %>">
                                        </a>
                                    </div>
                                    <div class="experience-detail">
                                        <span class="experience-headers">
                                            <h4> <%= workExp.companyName %> </h4>
                                            <h4> <%= moment(workExp.startDate).format('MMM YY') + ' - ' + (workExp.endDate ?  moment(workExp.endDate).format('MMM YY')  : ' current') %> </h4>
                                        </span>
                                        <span class="experience-headers">
                                            <h5> <%= workExp.title %> </h5> 
                                            <h5> <%= workExp.city + ', ' + workExp.state%> </h5> 
                                        </span>  
                                        <% workExp.responsibilities.forEach(function(responsibility){ %>
                                            <p> <%- responsibility %> </p>
                                        <% }) %>
                                       
                                    </div>
                                <hr>
                                </div>
                            <% }) %>
                        </div>
                    </div>
    		    </section>
    		<% } %>
		 
		    <!--Education Section-->
		    <% if(resume.education.details.length > 0) { %>
    		    <section class="section-background" style="background-image: url(<%= resume.education.backgroundImg %>); color: <%= resume.education.fontColor %>;">
    		        <div class="education-section">
        		        <div class="title">
        		            <h2>-- Education --</h2>
        		        </div>
        		        <div class="education-all">
        	                <!--Loop through education-->
        	                <% resume.education.details.forEach(function(edu){ %>
        	                                            <!--Sort by Start Date, Desc-->
        	                    <div class="education" style="order: <%= - edu.startDate.getTime() / 100000 %>;">
                                    <div class="education-image">
                                        <a href="<%= edu.url %>"  target="_blank">
                                            <img src="<%= edu.logo %>">
                                        </a>
                                    </div>
                                    <div class="education-detail">
                                        <span class="experience-headers">
                                            <h4> <%= edu.instituteName %> </h4>
                                            <h4> <%= moment(edu.startDate).format('MMM YY') + ' - ' + (edu.endDate ?  moment(edu.endDate).format('MMM YY')  : ' current') %> </h4>
                                        </span>
                                        <span class="experience-headers">
                                            <h5> <%= edu.degree + ' - ' + edu.areaOfStudy %> </h5>  
                                            <h5> <%= edu.city + ', ' + edu.state %> </h5>
                                        </span>  
                                        <ul>
                                        <% edu.achievements.forEach(function(achievement){ %>
                                            <li> <%- achievement %> </li>
                                        <% }) %>
                                        </ul>
                                        <p><%= edu.notes %></p>
                                        <% if(edu.graduated) { %>
                                            <img id="grad-image" src="http://icons.veryicon.com/256/Business/Pretty%20Office%2010/Graduate%20academic%20cap.png">
                                        <% } %>
                                    </div>
                                    <hr>
                                </div>
                            <% }) %>
                        </div>
                    </div>
                </section>
            <% } %>
		    
		    <!--Quotes Section-->
		    <% if(resume.quotes.details.length > 0) { %>
    		    <section class="section-background" style="background-image: url(<%= resume.quotes.backgroundImg %>); color: <%= resume.quotes.fontColor %>;">
    		        <div class="quotes-section">
        		        <div class="title">
        		            <h2>--Quotes That I Like--</h2>
        		        </div>
                        <!--Loop through other items-->
                        <% resume.quotes.details.forEach(function(quote){ %>
            		        <div class="quotes-all">
            		            <div class="quotes-detail">
                                   <p>
                                       "<%- quote.quote %>"
                                       <br>
                                       <span>- <%= quote.by %></span>
                                   </p>
                                </div>
                            </div>
                            <hr>
                        <% }) %>
                    </div>
                </section>
            <% } %>
		    
		    <!--Other Section-->
		    <% if(resume.other.details.length > 0) { %>
    		    <section class="section-background" style="background-image: url(<%= resume.other.backgroundImg %>); color: <%= resume.other.fontColor %>;">
    		        <div class="other-section">
                        <!--Loop through other items-->
                        <% resume.other.details.forEach(function(section){ %>
            		        <div class="title">
            		            <h2>-- <%= section.title %> --</h2>
            		        </div>
            		        <div class="other-all">
            		            <h4> <%= section.summary %> </h4>
            		            <div class="other-detail">
                                    <ul>
                                        <% section.bulletItems.forEach(function(item){ %>
                                            <li> <%- item %> </li>
                                        <% }) %>
                                    </ul>
                                </div>
                            </div>
                        <% }) %>
                    </div>
                </section>
            <% } %>
		    
        </main>
        
        <!--Footer-->
        <section class="footer">
            <div class="social">
                <a class="ui circular print icon button" href="/<%= user._id %>/resume/<%= resume.id %>/print" target="_blank" title="View Printable Version">
                  <i class="print icon"></i>
                </a>
                <i class="handshake outline icon"></i>
                
                <% if(user.githubURL) { %>
                <a class="ui circular github plus icon button" href="<%= user.githubURL %>" target="_blank">
                  <i class="github plus icon"></i>
                </a>
                <i class="handshake outline icon"></i>
                <% } %>
                
                <% if(user.twitterURL) { %>
                <a class="ui circular twitter icon button" href="<%= user.twitterURL %>" target="_blank">
                  <i class="twitter icon"></i>
                </a>
                <i class="handshake outline icon"></i>
                <% } %>
                
                <% if(user.instagramURL) { %>
                <a class="ui circular instagram icon button" href="<%= user.instagramURL %>" target="_blank">
                  <i class="instagram icon"></i>
                </a>
                <i class="handshake outline icon"></i>
                <% } %>
                
                <% if(user.facebookURL) { %>
                <a class="ui circular facebook icon button" href="<%= user.facebookURL %>" target="_blank">
                  <i class="facebook icon"></i>
                </a>
                <% } %>
                
                <a class="ui circular linkedin icon button" href="<%= user.linkedinURL %>" target="_blank">
                  <i class="linkedin icon"></i>
                </a>
            </div>
            <span id="builtby">
                This site was built by <a href="https://www.caryconklin.com">Cary Conklin</a>
            </span>
	    </section>
	    
    </body>
</html>