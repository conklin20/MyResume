<!DOCTYPE html>
<html>
    <head>
        <title>Scroll With Me</title>
        <!-- Make site responsive on mobile/tablet -->
        <meta name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1, user-scalable=no">
        <!--Bootstrap CDN-->
        <link rel="stylesheet" type="text/css" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css">
        <!--semanticUI-->
        <link rel="stylesheet" type="text/css" href="https://cdnjs.cloudflare.com/ajax/libs/semantic-ui/2.2.13/semantic.min.css"> 
        <!--Font Awesome-->
        <link rel="stylesheet" type="text/css" href="https://maxcdn.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css"> 
        <!--Scroll Magic-->
        <script src="//cdnjs.cloudflare.com/ajax/libs/ScrollMagic/2.0.5/ScrollMagic.min.js"></script>
        <script src="//cdnjs.cloudflare.com/ajax/libs/ScrollMagic/2.0.5/plugins/debug.addIndicators.min.js"></script>
        <!--Custom CSS-->
        <link rel="stylesheet" type="text/css" href="/stylesheets/main.css">
        <!--Custom JavaScript-->
        <script src="/js/app.js"></script>
    </head>
    <body>
    <nav class="navbar navbar-default">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#navbar" aria-expanded="false" aria-controls="navbar">
                  <span class="sr-only">Toggle navigation</span>
                  <span class="icon-bar"></span>
                  <span class="icon-bar"></span>
                  <span class="icon-bar"></span>
                </button>
    
                <a class="navbar-brand" href="/">Scroll With Me</a>
            </div>
            <div id="navbar" class="collapse navbar-collapse">
              <ul class="nav navbar-nav">
                <li class="<%= typeof page !== 'undefined' && page === 'login' ? 'active' : '' %>"><a href="/">Home</a></li>
              </ul>
              <ul class="nav navbar-nav navbar-right">
                  <% if(!currentUser){ %>
                      <li class="<%= typeof page !== 'undefined' && page === 'login' ? 'active' : '' %>"><a href="/auth/linkedin">Login</a></li>
                      <li class="<%= typeof page !== 'undefined' && page === 'login' ? 'active' : '' %>"><a href="/auth/linkedin">Sign Up</a></li>
                  <% } else { %>
                      <% if(currentUser.avatar) { %>
                        <li><img class="avatar sm" src="<%= currentUser.avatar %>"></li>
                      <% } %>
                      <li><a href="/logout">Logout</a></li>
                  <% } %>
              </ul>
            </div>
        </div>
    </nav>
    <!--Flash message-->
    <div class="container text-center">
      <% if(error && error.length > 0){ %>
        <div class="alert alert-danger" role="alert">
          <h1><%= error %></h1>
        </div>
      <% } %>
      <% if(success && success.length > 0){ %>
        <div class="alert alert-success" role="alert">
          <h1><%= success %></h1>
        </div>
      <% } %>
      <% if(warning && warning.length > 0){ %>
        <div class="alert alert-warning" role="alert">
          <h1><%= warning %></h1>
        </div>
      <% } %>
    </div>
    
    <div class="container">